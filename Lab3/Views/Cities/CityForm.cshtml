@model Lab3.ViewModels.CityFormViewModel
@{
    ViewBag.Title = "CityForm";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<h2>CityForm</h2>

@using (Html.BeginForm("Save", "Cities"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.")
    <div class="form-group">
        @Html.LabelFor(m => m.City.Name)
        @Html.TextBoxFor(m => m.City.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.City.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City.CityStatusId)
        @Html.DropDownListFor(m => m.City.CityStatusId, new SelectList(Model.CityStatuses, "Id", "Name"), "Select City Status", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.City.CityStatusId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City.CountryId)
        @Html.DropDownListFor(m => m.City.CountryId, new SelectList(Model.Countries, "Id", "Name"), "Select Country Status", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.City.Country)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City.Description)
        @Html.TextAreaFor(m => m.City.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.City.Description)
    </div>
    @Html.HiddenFor(m => m.City.Id)
    @Html.AntiForgeryToken()
    <button type="submit">Save</button>
}
